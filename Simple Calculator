print(8*"$","welcome to mini calcuator ",8*"$")
class hello:
    def add(self):
        print("1.Add")
        print("2.Sub")
        t=int(input("enter your choice"))
        if t==1:
            self.a=int(input("Enter a  value :"))
            self.b=int(input("Enter b variable :"))
            self.c=self.a+self.b
            print("the answer is ",self.c)
            print("enter your wish (yes/no)")
            c=input("enter your choice")
            if c == "yes":
                print("please select your Option ")
                print("1.add")
                print("2.sub")
                print("3.mul")
                print("4.div")
                det=int(input("enter your choice"))
            if det == 1:
            
                self.d=int(input("enter your added variable"))
                self.e=self.d+self.c
                print("the answer is ",self.e)
            elif det == 2:
            
                self.d=int(input("enter your subtracted variable"))
                self.e=self.d-self.c
                print("the answer is ",self.e)
            elif det == 3:
            
                self.d=int(input("enter your multiply variable"))
                self.e=self.d*self.c
                print("the answer is ",self.e)
            elif det == 4:
            
                self.d=int(input("enter your divided variable"))
                self.e=self.d/self.c
                print("the answer is ",self.e)
            
            else:
                print("Thank you for ur response")
        elif t==2:
            self.a=int(input("Enter a  value :"))
            self.b=int(input("Enter b variable :"))
            self.c=self.a-self.b
            print("the answer is ",self.c)
            
            print("enter your wish (yes/no)")
            c=input("enter your choice")
        
        if c == "yes":
            print("please select your Option ")
            print("1.add")
            print("2.sub")
            print("3.mul")
            print("4.div")
            det=int(input("enter your choice"))
            if det == 1:
            
                self.d=int(input("enter your added variable"))
                self.e=self.d+self.c
                print("the answer is ",self.e)
            elif det == 2:
            
                self.d=int(input("enter your subtracted variable"))
                self.e=self.d-self.c
                print("the answer is ",self.e)
            elif det == 3:
            
                self.d=int(input("enter your multiply variable"))
                self.e=self.d*self.c
                print("the answer is ",self.e)
            elif det == 4:
            
                self.d=int(input("enter your divided variable"))
                self.e=self.d/self.c
                print("the answer is ",self.e)
            
        else:
            print("Thank you for ur response")
                 
c=hello()
c.add()

