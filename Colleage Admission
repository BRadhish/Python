class arts:
    
    def __init__(self):
        self.name =input("Enter your name")
        self.appno = input("Enter your application number")
        self.age =input("ENter your age")
        self.gender = input("Enter your gender")
        self.mark = input("Enter your 12th percentage :")
    def form(self):
        print("your name is ",self.name,"and your application number is ",self.appno,"and your age is ",self.age,"gender is ",self.gender,"and your cuttoff is ",self.mark)
    def bsc(self):
        inp = int(input("Enter your 12 th percentage : "))
        if inp > 80:
            print("you are elligible for the course")
        else:
            print("sorry!! you are Not elligible")
    def bba(self):
        inp = int(input("Enter your 12 th percentage : "))
        if inp > 60:
            print("you are elligible for the course")
        else:
            print("sorry!! you are Not elligible")
    def msc(self):
        inp = int(input("Enter your 12 th percentage :"))
        if inp > 70:
            print("you are elligible for the course")
        else:
            print("sorry!! you are Not elligible")
  

class rentdetails:
    def withoutac(rent):
        print("the rent of without ac is ",rent)
    def withac(rent):
         print("the rent of without ac is ",rent)
    def withoacwithf(rent):
         print("the rent of without ac AND with food is ",rent)
    def withacwithf(rent):
         print("the rent of with ac AND with food is ",rent)
class artsfee:
    def bscf(rent):
        print("the fee for BSC course is  ",rent)
    def mscf(rent):
         print("the fee for MSC course is  ",rent)
    def bbaf(rent):
         print("the fee for BBA course is  ",rent)
    
class hostelspec :
    def fees() :
        
        choice = input("Are you willing to join Hostel").lower()
        if choice == "yes":
    
            print("Enter 1 to show the rent of without A/c")
            print("Enter 2 to show the rent of with A/c")
            print("Enter 3 to show the rent of without A/c with food")
            print("Enter 4 to show the rent of with A/c and with food")
            i = int(input("enter the choice"))
            if i==1:
                y=rentdetails
                y.withoutac(rent=4500)
            elif i==2:
                y=rentdetails
                y. withac(rent=5000)
            elif i==3:
                y=rentdetails
                y.withoacwithf(rent=5500)
            elif i==4:
                y=rentdetails
                y.withacwithf(rent=6000)
            elif choice == "no":
                print("Thank you visiting the PSNA portal")

